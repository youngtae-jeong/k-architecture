  font-size: 0.75rem;
  font-weight: 300;
  margin: 0 0 0.25rem 0;
  padding: 0 0 0.75rem 0;
  letter-spacing: 0.25rem;
}

.box header p:after {
  content: "";
  position: absolute;
  margin: auto;
  right: 0;
  bottom: 0;
  left: 0;
  width: 50%;
  height: 1px;
  background-color: rgba(0, 0, 0, 0.125);
}

.box .content {
  padding: 3rem;
}

.box > :last-child,
.box > :last-child > :last-child,
.box > :last-child > :last-child > :last-child {
  margin-bottom: 0;
}

.box.alt {
  border: 0;
  border-radius: 0;
  padding: 0;
}

@media screen and (max-width: 736px) {
  .box .content {
    padding: 2rem;
  }
}

